{
  "name": "monorepo",
  "version": "1.0.0",
  "description": "Monorepo template with pnpm, typescript, nest and react",
  "type": "module",
  "scripts": {
    "start:dev": "pnpm --recursive --parallel --stream run start:dev",
    "build": "pnpm --recursive --parallel --stream run build",
    "start": "pnpm --recursive --parallel --stream run start",
    "start:prod": "pnpm --recursive --parallel --stream run start:prod",
    "lint": "pnpm --recursive --parallel --stream run lint",
    "commit": "sui-mono commit",
    "format": "pnpm --recursive --parallel --stream run format",
    "prepare-commithooks": "husky install",
    "test:unit": "pnpm --recursive --parallel --stream run test:unit",
    "test:e2e": "pnpm --recursive --parallel --stream run test:e2e",
    "postinstall": "pnpm run prepare-commithooks",
    "dependencies-graph": "pnpm --recursive --parallel --stream run dependencies-graph"
  },
  "keywords": [],
  "author": "danixl30",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "^1.9.2",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@japa/expect": "^3.0.2",
    "@japa/runner": "^3.1.4",
    "@jest/globals": "^29.7.0",
    "@s-ui/mono": "^2.34.0",
    "@types/jasmine": "^5.1.4",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.8.8",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "concurrently": "^8.2.2",
    "dependency-cruiser": "^12.6.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "graphviz": "^0.0.9",
    "husky": "^8.0.3",
    "prettier": "^2.3.2",
    "tsconfig-paths": "4.1.1",
    "typescript": "^5.6.2",
    "vitest": "^0.34.6"
  }
}
