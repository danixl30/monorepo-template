{
  "extends": "./tsconfig.json",
  "include": ["tests"],
  "exclude": ["src"],
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist_test",
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "tests/*": [
        "./tests/*"
      ]
    }
  },
  "tscc": {
    "deleteOutDir": true
  }
}

