{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "tests/*": [
        "./tests/*"
      ]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
